<UserControl x:Class="NugetWorkflow.UI.WpfUI.Pages.Settings.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <mui:ModernTab Layout="List" SelectedSource="/Pages/Settings/SubSettings/AppearancePage.xaml">
            <mui:ModernTab.Links>
                <mui:Link DisplayName="Appearance" Source="/Pages/Settings/SubSettings/AppearancePage.xaml" />
                <mui:Link DisplayName="About" Source="/Pages/Settings/SubSettings/AboutPage.xaml"/>
                <mui:Link DisplayName="General" Source="/Pages/Settings/SubSettings/GeneralPage.xaml" />
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>
